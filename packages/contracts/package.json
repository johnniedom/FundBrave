{
  "name": "fundbrave-contracts",
  "version": "1.0.0",
  "description": "FundBrave - Decentralized Fundraising Smart Contracts",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:fuji": "hardhat run scripts/deploy.js --network fuji",
    "upgrade:sepolia": "hardhat run scripts/upgrade.js --network sepolia",
    "upgrade:mumbai": "hardhat run scripts/upgrade.js --network mumbai",
    "verify:sepolia": "hardhat run scripts/verify.js --network sepolia",
    "verify:mumbai": "hardhat run scripts/verify.js --network mumbai",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix"
  },
  "keywords": [
    "fundraising",
    "blockchain",
    "web3",
    "defi",
    "ethereum",
    "polygon",
    "avalanche"
  ],
  "author": "FundBrave Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.5.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.5",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.16",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@layerzerolabs/lz-evm-messagelib-v2": "^3.0.146",
    "@layerzerolabs/lz-evm-oapp-v2": "^3.0.146",
    "@layerzerolabs/lz-evm-protocol-v2": "^3.0.146",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "dotenv": "^16.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
